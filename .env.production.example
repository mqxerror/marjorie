# ===========================================
# Marjorie - Production Environment Variables
# ===========================================
# Copy this to .env and fill in real values before deploying.
# For Dokploy: paste these into the Compose environment section.

# --- Database ---
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@host.docker.internal:5433/marjorie

# --- Backend ---
ADMIN_API_KEY=your-secure-admin-api-key
CORS_ORIGIN=https://marjoriequintos.com
EMAILIT_API_KEY=your-emailit-api-key
EMAILIT_FROM_ADDRESS=noreply@marjoriequintos.com
ADMIN_NOTIFICATION_EMAILS=admin@example.com

# --- Frontend (build-time, baked into JS bundle) ---
# Uses path-based routing: /api/* proxied to backend via nginx
NEXT_PUBLIC_API_URL=https://marjoriequintos.com
NEXT_PUBLIC_ADMIN_API_KEY=your-secure-admin-api-key

# --- Frontend (runtime) ---
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=https://marjoriequintos.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password
